<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>out-unix</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputFileNameMapping>${artifact.groupId}.${artifact.artifactId}.${artifact.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>assemble/distr/application.yaml</source>
            <outputDirectory>config</outputDirectory>
            <destName>application.yaml</destName>
            <lineEnding>unix</lineEnding>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <outputDirectory>theme</outputDirectory>
            <directory>assemble/theme</directory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>realms</outputDirectory>
            <directory>assemble/realms</directory>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>config</outputDirectory>
            <directory>assemble/distr</directory>
            <includes>
                <include>logback.xml</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>assemble/distr</directory>
            <includes>
                <include>start.sh</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
</assembly>